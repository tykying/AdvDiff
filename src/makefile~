include ../makefile.inc

OBJS = $(addsuffix .o, $(basename $(wildcard *.F90)))

default: $(OBJS)

.PHONY: clean

%.o: %.F90
	$(FC) $(FCFLAGS) $(CPPFLAGS) -c -o $@ $<

advdiff.o: advdiff_field.o \
  advdiff_precision.o

advdiff_field.o: advdiff_precision.o

clean:
	rm -fv $(OBJS)
	rm -fv $(addsuffix .mod, $(basename $(OBJS)))
